@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<p>
    Account Balances
</p>
<div class="mt-3">
@foreach (var b in @Model.Balances)
{
    <div>
    <strong>@b.Key </strong> @b.Value w
    </div>
}
</div>

<p>
    Historical Account Value
</p>
<div class="mt-3">
@foreach (var b in @Model.InitBalances)
{
    <div>
    <strong>@b.Key </strong> @b.Value w
    </div>
}
</div>

<p>
    Current Account Value
</p>
<div class="mt-3">
@foreach (var b in @Model.CurrentBalances)
{
    <div>
    <strong>@b.Key </strong> @b.Value w
    </div>
}
</div>

<p>
    Bot input:
</p>
<form method="post">
    <div class="form-group">
        <label asp-for="TokenInput">TokenIn</label>
        <input asp-for="TokenInput" class="form-control" />
        <span asp-validation-for="TokenInput" class="text-danger"></span>

        <label asp-for="TokenOutput">TokenOut</label>
        <input asp-for="TokenOutput" class="form-control" />
        <span asp-validation-for="TokenOutput" class="text-danger"></span>

        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if(Model.QuoteResult1 != null) 
{
<p>
    Quote:
</p>
    <div class="mt-3">
        <strong>V3 pool:</strong> @Model.QuoteResult1 w
        <strong>V4 pool:</strong> @Model.QuoteResult2 w
    </div>
}
