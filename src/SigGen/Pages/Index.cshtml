@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="TokenInput">TokenIn</label>
        <input asp-for="TokenInput" class="form-control" />
        <span asp-validation-for="TokenInput" class="text-danger"></span>

        <label asp-for="TokenOutput">TokenOut</label>
        <input asp-for="TokenOutput" class="form-control" />
        <span asp-validation-for="TokenOutput" class="text-danger"></span>

        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (Model.QuoteResult1 != null && Model.QuoteResult2 != null)
{
    <div class="mt-3">
        <strong>API Response 1:</strong> @Model.QuoteResult1
        <strong>API Response 2:</strong> @Model.QuoteResult2
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}